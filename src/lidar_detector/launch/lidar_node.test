<launch>
    <include file="$(find lidar_detector)/launch/lidar_node.launch" />

    <!-- Loop the same single message from pointcloud bag -->
    <node pkg="rosbag" type="play" name="rosbag" args="-l $(find package)/test/pointcloud.bag"/>

    <test pkg="lidar_detector" test-name="lidar_node_tester" type="lidar_node_tester" />
</launch>
